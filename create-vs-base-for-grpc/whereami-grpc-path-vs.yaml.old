apiVersion: networking.istio.io/v1beta1
kind: VirtualService
metadata:
  name: whereami-gprc-vs
  namespace: whereami-grpc
  #namespace: asm-ingress
spec:
  gateways:
  - asm-ingress/whereami-gateway
  hosts:
  - 'frontend.endpoints.mc-e2m-01.cloud.goog'
  http:
  - name: "whereami-grpc-path"
    match:
    - uri:
        prefix: "/whereami-grpc"
    rewrite:
      uri: "/"
    route:
    - destination:
        host: whereami-grpc.whereami-grpc.svc.cluster.local
        port:
          number: 9090